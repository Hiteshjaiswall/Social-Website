
<script src="https://kit.fontawesome.com/c348d4c177.js" crossorigin="anonymous"></script>
<li id="post-<%=post.id %>">
    <div id ="post-content">
        <!-- <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_640.png" alt="" id="post-image"> -->
    <%=post.content %>
    <% if((locals.user) && (locals.user.id == post.user.id) ) {%>
                <a href="/posts/destroy/<%= post._id %>" class="delete-post-button"><i  class="fa-solid fa-trash delete-post-button"></i></a> 
<%}%>
            </div>
    <span>By</span>
    <small style="color: blue;">
        <!--  it would show the refrence -->
        <!-- <%= post.user %> -->
        <!--  need to populate the user -->
        <%= post.user.name %>
    </small>
    <div class="post-comment">
        <% if(locals.user){%>
        <form action="/comments/create" method="post">
            <input type="text" name="content" placeholder="Comments....." required>
            <input type="hidden" name="post" value="<%= post._id %>">
            <input type="submit" value="Add Comment" id="button">
        </form>
            <%}%>
    </div>
    <div id="post-comment-list">
            <ul id="post-comments-<%= post._id %>">
                <% for (comment of post.comments){%>
                    <%- include('_comments') -%>
                    <%}%>
            </ul>
    </div>
    
</li>
<script src="/js/home_posts.js"></script>
